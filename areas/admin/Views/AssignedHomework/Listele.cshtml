@model IEnumerable<odev.dagitim.portali.models.AssignedHomework>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">📋 Dağıtılan Ödevler</h2>

<div class="text-end mb-3">
    <a href="/Admin/AssignedHomework/Ekle" class="btn btn-primary">
        ➕ Yeni Ödev Dağıt
    </a>
</div>

<table class="table table-bordered table-striped table-hover text-center align-middle w-100">

    <thead>
        <tr>
            <th style="width:5%">ID</th>
            <th style="width:20%">Başlık</th>
            <th style="width:35%">Açıklama</th>
            <th style="width:20%">Son Teslim Tarihi</th>
            <th style="width:10%">İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td style="word-break: break-all;">@item.Description</td>
                <td>
                    @item.DueDate.ToString("dd.MM.yyyy")
                </td>
                <td>
                    <button class="btn btn-danger btn-sm" onclick="deleteDagitilanOdev(@item.Id)">Sil</button>
                </td>
            </tr>
        }
    </tbody>

</table>

<script>
    function deleteDagitilanOdev(id) {
        if (confirm('Bu ödevi silmek istediğinize emin misiniz?')) {
            fetch('/Admin/AssignedHomework/Sil/' + id, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Silme işlemi başarısız oldu.');
                }
            });
        }
    }
</script>
    