@model IEnumerable<odev.dagitim.portali.models.DagitilanOdev>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">📋 Dağıtılan Ödevler</h2>

<div class="text-end mb-3">
    <a href="/Admin/DagitilanOdev/Ekle" class="btn btn-primary">
        ➕ Yeni Ödev Dağıt
    </a>
</div>

<table class="table table-bordered table-striped table-hover text-center align-middle w-100">

    <thead>
        <tr>
            <th style="width:5%">ID</th>
            <th style="width:20%">Başlık</th>
            <th style="width:35%">Açıklama</th>
            <th style="width:20%">Son Teslim Tarihi</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Baslik</td>
                <td style="word-break: break-all;">@item.Aciklama</td>
                <td>
                    @item.SonTeslimTarihi.ToString("dd.MM.yyyy")
                </td>
            </tr>
        }
    </tbody>

</table>
    