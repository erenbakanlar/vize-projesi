@model IEnumerable<odev.dagitim.portali.models.Odev>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">📂 Yüklenen Ödevler</h2>

<table class="table table-bordered table-striped table-hover text-center align-middle w-100">

    <thead>
        <tr>
            <th style="width:5%">ID</th>
            <th style="width:10%">Öğrenci ID</th>
            <th style="width:45%">Dosya</th>
            <th style="width:20%">Yükleme Tarihi</th>
            <th style="width:10%">İndir</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.OgrenciId</td>

                <td style="word-break: break-all;">
                    @item.DosyaYolu
                </td>

                <td>
                    @item.YuklemeTarihi.ToString("dd.MM.yyyy HH:mm")
                </td>

                <td>
                    <a class="btn btn-sm btn-primary" href="@item.DosyaYolu">İndir</a>
                </td>
            </tr>
        }
    </tbody>

</table>
