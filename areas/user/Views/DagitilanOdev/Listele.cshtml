@model IEnumerable<odev.dagitim.portali.models.DagitilanOdev>

@{
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">📚 Verilen Ödevler</h2>

<table class="table table-bordered table-striped table-hover text-center align-middle w-100">

    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Son Teslim</th>
            <th>Teslim Et</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Baslik</td>
                <td style="word-break: break-all;">@item.Aciklama</td>
                <td>@item.SonTeslimTarihi.ToString("dd.MM.yyyy")</td>
                <td>
                    <a href="/User/Odev/Yukle" class="btn btn-sm btn-success">
                        📤 Teslim Et
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
